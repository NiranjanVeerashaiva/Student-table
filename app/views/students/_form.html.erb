<%= form_with model: student do |form| %>
<% if form.object.errors.any? %>
<% form.object.errors.full_messages.each do |message| %>
<div><%= message %></div>
<% end %>
<% end %>
<div>
    <%= form.label :name %>
    <%= form.text_field :name %>
</div>
<div>
    <%= form.label :cover_image %>
    <%  if student.cover_image.present? %>
    <div id="<%= dom_id(student, :cover_image) %>">
    <%= image_tag student.cover_image, class: "w-1/2"  %>
    <%= link_to "remove cover image", student_cover_image_path(student), data: {turbo_method: :delete, turbo_confirm: "are you sure"} %>
    </div>
    <% end %>
    <%= form.file_field :cover_image %>
</div>
<div>
    <%= form.label :content %>
    <%= form.rich_text_area :content %>
</div>
<div>
    <%= form.label :publieshed_at %>
   <div class="p-2"> <%= form.datetime_select :publieshed_at, include_blank: true %></div>
</div>
<%= form.button %>
<% end %>